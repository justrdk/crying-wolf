{
  "parser": "babel-eslint",
  "env": {
    // I write for browser
    "browser": true,
    // and for the server
    "node": true,
    // with Meteor
    "meteor": true,
    "es6": true
  },
  "rules": {
    "quotes": [2, "single"],
    "eol-last": [0],
    "no-mixed-requires": [0],
    "no-underscore-dangle": [0],
    "no-extra-strict": [0],
    "strict": [0],
    "curly": [0]
  },
  "globals": {
    // Collections
    "Weeks": true
  }
}
